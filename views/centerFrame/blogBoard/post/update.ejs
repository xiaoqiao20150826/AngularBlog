<div class="col-lg-10" style="margin:0 0 0 20px">
<meta charset="utf-8">

<!-- blog insert form -->
<%
	var loginUser = blog.loginUser
	 ,  post = blog.post
%>

 <form action="/blogBoard/update" method="post" enctype="multipart/form-data" name="writeForm" class="form-horizontal"  id='blogBoard-insertForm'  role="form">
 	<input name="num" type="text" value="<%= post.num%>" style="display:none">
 	<input name="originCategoryId" type="text" value="<%= post.categoryId%>" id='blogBoard-originCategory' style="display:none">
 
   <div class="form-group">
      <label class="col-sm-2 control-label">
         Id
      </label>
      <div class="col-sm-10">
         <input name="userId" type="text" 
         value="<%= loginUser._id%>" style="display:none">
         <input class="form-control" type="text" 
            value="<%= loginUser._id%>" disabled>
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-2 control-label">category</label>
      <div class="col-sm-10">
         <% include ../../../part/categorySelector.ejs %>
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
         <input class="form-control" name="title" type="text"
            placeholder="title" value='<%= post.title%>' >
      </div>
   </div>
   <div class="form-group">
      <label class="col-sm-2 control-label">Content</label>
      <div class="col-sm-10">
      <textarea class="col-sm-12" name="content"><%= post.content%></textarea><!--/textarea로 닫지않으면 아래 태그가 이상해짐  -->	
<!--          <input class="form-control" id="content" type="text"  -->
<!--             value="content"> -->
      </div>
   </div>
   <div class="form-group">
	    <label class="col-sm-2 control-label">File input</label>
	    <div class="col-sm-10">
	    	<input type="text" id="blogBoard-fileUrls" name='fileUrl' style="display:none" value='<%= post.getUrlStringsOfFile()%>'> 
	    	<input type="file" id= 'blogBoard-insertFile' data-userId='<%= loginUser._id%>'>
	    </div>
   </div>
   <% 
   	   var urlStrings = post.getUrlStringsOfFile()
   	   urlStrings = urlStrings.replace(/;/g,'\n')
   %>
   <textarea class='col-sm-offset-2 col-sm-10 row' id='blogBoard-fileList' style='height:70px' disabled>
   <%= urlStrings%>
   </textarea>
   <button type="submit" class="btn btn-default pull-right">Submit</button>
</form>
</div>      
      
