
<div id="blogListFrame">
	<meta charset="utf-8">
	<!----------- 글 리스트  -->
	<!-- Nested media object -->
	<%
		var pager = blog.pager
		  , pageCount = pager.getPageCount()
		  , posts = blog.posts;
	%>
	
	<!-- list  -->
	<%
		for(var i in posts) {
			var post = posts[i]
			  , user = post.user;
	%>
	<div class="row  col-sm-10  col-sm-offset-1 board-row">
		<div class=" col-sm-2" style="padding:9px 0">
			<div>Votes <B><%=post.vote%></B></div>
			<div>Answers <B><%= post.answerCount%></B></div>
			<div>Views <B><%= post.readCount%></B></div>
		</div>
		<div class="col-sm-10 " >
			<div class="row">
				<a href="/blog/<%=post.num%>/<%=post.getTitle4url()%>"> 
					<H2><%=post.title %></H2>
				</a>
			</div>
			<div class="media-body  pull-right">
				<img src='<%=user.photo %>' class="img-circle" alt='img' style="width:20px">
				<span class="name"><a href="#"><%=user.name %></a></span>
				<span class="date"><%=post.created.toLocaleDateString() %></span>
			</div>
		</div>
	</div>	
	<%					
		}
	%>
	
	
	<!--pager  -->
	
	<%		
		var sorter = blog.sorter;
	%>
	<div class='jumbotron'>
		<ul class="pagination">
			<li class="blogPager" data-sorter="<%=sorter%>" data-pagenum="<%=1%>" ><a href='javascript:'>&laquo;</a></li>
		<%
		  
		  for(var i=1, max=pageCount+1 ; i < max; ++i) {
		%>
		  		<li class="blogPager"  data-sorter="<%=sorter%>" data-pagenum="<%=i%>"><a href='javascript:'><%= i %></a></li>
		<%
		  } 
		%>
			<li class="blogPager"  data-sorter="<%=sorter%>" data-pagenum="<%=pageCount%>"><a href='javascript:'>&raquo;</a></li>  
		</ul>
	</div>
	
	<!--end pager   -->
</div>

