<% layout('../layout.ejs') -%>
<% script('../../resources/js/board/detail.js')  -%>
<div class="col-lg-7" id="center_frame" style="margin: 0 0 0 20px">
	<meta charset="utf-8">

	<!-- blog detail -->
	<%  
		var loginUser = blog.loginUser;
		var post = blog.post
		  , user = post.user;
		  
	%>
	<article class="row">
		<div class="span8">
			<div class="row-fluid">
				<header class="span8">
					<h3>
						<strong><%= post.title%></strong>
					</h3>
				</header>
			</div>
			<div class="row-fluid">
				<section class="span8">
					<p><%= post.content%></p>
				</section>
			</div>
			<div class="row-fluid">
			<%
			if(post.hasFile()) {
			%>
				<footer class="span8">
					<div class='pull-right'>
						<div class='row-fluid'>download</div>
						<div class='row-fluid'>
							<a href='/file/download?filepath=<%= post.filePaths %>'> <%=
								post.getFileName(post.filePaths) %> 
							</a>
						</div>
					</div>
				</footer>
			<% } %>
				<footer class="span8">
			<%
				if(loginUser) {
			%>
					<p>
						<div class=" col-sm-offset-5">
							
							<a id="post_increase_vote" data-userId="<%=loginUser._id%>" data-postNum="<%=post.num %>" data-votecount="<%=post.vote%>" class="btn btn-default btn-xs">
						    	★ Vote  <%=post.vote%>
							</a>
						</div>
							
					</p>
			<% } %>
					<p>
						<img src='<%=user.photo %>' class="img-circle" alt='img'
							style="width: 20px"> by <a href="#"><%= user.name%></a> | <i
							class="icon-calendar"></i> <%= post.created.toLocaleDateString()%> | <i class="icon-tags"></i> Tags : <a href="#"><span
							class="label label-info">안했음</span></a>
					</p>
			<%
				if(loginUser && loginUser._id == post.userId) {
			%>		
					<p>
					<div class="row-fluid">
						<a class="btn btn-default span2  pull-right"
							href = "/blog/delete?postNum=<%=post.num %>&filepath=<%= post.filePaths ? post.filePaths: '' %>&userId=<%=post.userId%>">
							delete
						</a>
						<a class="btn btn-default span2  pull-right" id='insert'>edit</a>
					</div>
					</p>
			<%
				}
			%>
				</footer>
			</div>
		</div>
		<!--span8-->
	</article>
	<article class="row">
		<div class="span8">
		<% include ../answer/list.ejs %>
		</div>
	</article>
	
</div>


